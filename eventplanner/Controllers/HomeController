public class HomeController : Controller
{
    // Ação para mostrar a página inicial com as opções
    public IActionResult Index()
    {
        return View();
    }

    // Ação para processar a escolha do user
    [HttpPost]
    public IActionResult ChooseOption(string option)
    {
        switch (option)
        {
            case "buyTicket":
                return RedirectToAction("Comprar", "Bilhete");
            case "checkPoster":
                return RedirectToAction("Mostrar", "Cartaz");
            case "closeApp":
                return RedirectToAction("Fechar", "App");
            default:
                return View("Index");
        }
    }
}

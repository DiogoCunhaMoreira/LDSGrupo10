<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .pdf-form {
            margin: 30px auto;
            width: 50%;
        }

        .pdf-form label {
            font-weight: bold;
        }

        .error-list li {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="pdf-form card p-4">
            <h2 class="text-center">Gerar bilhete em PDF</h2>

            @if (!ViewData.ModelState.IsValid)
            {
                <ul class="error-list">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            }

            <form method="post" action="/PDF/CriarPDF">
                <div class="form-group">
                    <label for="nome">Nome:</label>
                    <input type="text" id="nome" name="Nome" class="form-control" value="@Model.Nome" required />
                </div>

                <div class="form-group">
                    <label for="espetaculo">Espetáculo:</label>
                    <select id="espetaculo" name="Espetaculo" class="form-control" required>
                        <option value="">Selecione um espetáculo</option>
                        <option value="Show A">Show A</option>
                        <option value="Show B">Show B</option>
                        <option value="Show C">Show C</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="lugar">Lugar:</label>
                    <select id="lugar" name="Lugar" class="form-control" required>
                        <option value="">Selecione um lugar</option>
                        <option value="Lugar 1">Lugar 1</option>
                        <option value="Lugar 2">Lugar 2</option>
                        <option value="Lugar 3">Lugar 3</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Criar Bilhete PDF</button>
            </form>
        </div>
    </div>
</body>
</html>
